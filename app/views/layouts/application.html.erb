<!DOCTYPE html>
<html>
  <head>
  <title>Blood Donation Center</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>

    <%= stylesheet_pack_tag 'application' %>
  </head>

  <body>

  <header>
    <nav class="navbar navbar-expand-sm navbar-light bg-white">
      <div class="container">
        <a href="#" class="navbar-brand">
        <%= image_tag('logo.png') %>
        </a>
        <button class="navbar-toggler" data-toggle="collapse" data-target="#nav-principal">
          <span class="navbar-toggler-icon"></span>
        </button>
        <div class="collapse navbar-collapse" id="#nav-principal">
          <ul class="navbar-nav ml-auto">
            <li class="nav-item">
              <a href="#" class="nav-link">Home</a>
            </li>
            <li class="nav-item">
              <a href="#" class="nav-link">About Us</a>
            </li>
            <li class="nav-item">
              <a href="#" class="nav-link">Need Help</a>
            </li>
            <li class="nav-item">
              <%# link_to 'All Donations', all_donations_path, class:"nav-link" %>
            </li>
            <% if current_user %>
            <li class="nav-item">
              <%= link_to 'Donate', new_blood_path, class:"nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'My Donations', my_donations_path, class:"nav-link" %>
            </li>
            <li class="nav-item">
              <%= link_to 'Log out', destroy_user_session_path, class:"nav-link", method: :delete %>
            </li>
            <% else  %>
            <li class="nav-item">
              <%= link_to 'Login', new_user_session_path, class:"nav-link" %>
            </li>
            <% end %>
          </ul>
        </div>
      </div>
    </nav>
  </header>
    <%= yield %>
  </body>
</html>
