<!DOCTYPE html>
<html>
  <head>
  <title>Blood Donation Center</title>
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <meta http-equiv="X-UA-Compatible" content="IE=edge,chrome=1">

    <meta name="viewport" content="width=device-width, initial-scale=1, shrink-to-fit=no">
    <%= stylesheet_link_tag 'application', media: 'all', 'data-turbolinks-track': 'reload' %>
    <%= javascript_pack_tag 'application', 'data-turbolinks-track': 'reload', defer: true %>

    <%= stylesheet_pack_tag 'application' %>
  </head>

  <body>

  <header>
    <div class="container bg-transparent pb-3 pt-3 fixed-top">
    <% nav_class = request.env['PATH_INFO'] == '/' ? 'btn-outline-light' : 'btn-outline-dark' %>
      <% if current_user %>
        <div class="text-end mx-2 mt-2">
        <%= link_to current_user.name, '#', class:"btn #{nav_class} me-2 mr-3" %>
        <%= link_to 'Blood Donation Center', root_path, class:"btn #{nav_class} me-2" %>
        <%= link_to 'Donate Now', new_blood_path, class:"btn #{nav_class} me-2" %>
        <%# <button type="button" class="btn btn-danger">Donate</button> %>
        <%= link_to 'My Donations', my_donations_path, class:"btn #{nav_class} me-2" %>
        <%= link_to 'Offers and Requests', all_donations_path, class:"btn #{nav_class} me-2" %>
        <%# <button type="button" class="btn btn-danger">My Donations</button> %>
        <%= link_to 'Log out', destroy_user_session_path, class:"btn btn-outline-danger my-2 my-sm-0", method: :delete %>
        <%# <button type="button" class="btn #{nav_class} me-2">Sign-out</button> %>
        <% else  %>
        <%= link_to 'Offers and Requests', all_donations_path, class:"btn #{nav_class} me-2" %>
        <%= link_to 'Blood Donation Center', root_path, class:"btn #{nav_class} me-2" %>
        <%= link_to 'Donate Now', new_blood_path, class:"btn #{nav_class} me-2" %>
        <%# <button type="button" class="btn btn-danger">Donate</button> %>
        <%= link_to 'My Donations', my_donations_path, class:"btn #{nav_class} me-2" %>
        <%= link_to 'Login', new_user_session_path, class:"btn btn-success my-2" %>
        <%# <button type="button" class="btn btn-danger">Login</button> %>
        <% end %>
        </div>
      </div>
    </div>
  </header>
  <div>
    <%= yield %>
  </div>
  <script src="https://maxcdn.bootstrapcdn.com/bootstrap/3.3.5/js/bootstrap.min.js"></script>

  </body>
</html>
