<div class='container'>
  <div class='d-flex justify-content-between my-4'>
    <h1><%= current_user.cnpj.nil? ? 'Blood Requests' : 'Donations Available' %></h1>
    <%= link_to 'Back', root_path, class:'btn-danger btn' %>
  </div>
  <div>
    <table class="table">
      <thead class="bg-danger text-white">
        <tr>
          <th scope="col"><%= current_user.cnpj.nil? ? 'Hospital' : 'User' %></th>
          <th scope="col">Blood Type</th>
          <th scope="col">Address</th>
          <th colspan="3"></th>
        </tr>
      </thead>
        <tbody>
          <% @bloods.each do |blood|  %>
            <% if current_user.cnpj != nil %>
              <tr>
                <td scope="col"><%= blood.user.name %></td>
                <td scope="col"><%= blood.blood_type  %></td>
                <td scope="col"><%= blood.address  %></td>
              </tr>
            <% else %>
              <tr>
                <td scope="col"><%= blood.user.name %></td>
                <td scope="col"><%= blood.blood_type  %></td>
                <td scope="col"><%= blood.address  %></td>
              </tr>
            <% end %>
          <% end %>
        </tbody>
    </table>
  </div>
</div>
