<div class='container'>
  <div class='d-flex justify-content-between my-4 text-center'>
    <h1 class='text-center'>All Donations</h1>
    <%= link_to 'Back', root_path, class:'btn-warning btn' %>
  </div>
  <div>
    <table class="table">
      <thead class="bg-danger text-white">
        <tr>
          <th scope="col">User</th>
          <th scope="col">Blood Quantity</th>
          <th scope="col">Location</th>
          <th colspan="3"></th>
        </tr>
      </thead>
        <tbody>
          <% @bloods.each do |blood|  %>
          <tr>
            <td scope="col"><%= blood.user.name %></td>
            <td scope="col"><%= blood.quantity  %>ml</td>
            <td scope="col"><%= blood.location  %></td>
          </tr>
          <% end  %>
        </tbody>
    </table>
  </div>
</div>
