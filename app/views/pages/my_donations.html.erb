<div class='container'>
  <div class='d-flex justify-content-between my-4 class=''>
    <h1>My Donations</h1>
    <%= link_to 'Back', root_path, class:'btn-danger btn' %>
  </div>
  <div>
    <table class="table">
      <thead class="bg-danger text-white">
        <tr>
          <th scope="col">Blood Type</th>
          <th scope="col">Address</th>
          <th colspan="3"></th>
        </tr>
      </thead>
        <tbody>
          <% @donations.each do |donation|  %>
            <tr>
              <td scope="col"><%= donation.blood_type%>ml</td>
              <td scope="col"><%= donation.address %></td>
            </tr>
          <% end %>
        </tbody>
    </table>
  </div>
</div>
