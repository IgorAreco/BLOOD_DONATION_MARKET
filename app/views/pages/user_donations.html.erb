<div class='container'>
  <div class='d-flex justify-content-between my-4'>
    <h1>My Donations</h1>
    <%= link_to 'Back', root_path, class:'btn-danger btn' %>
  </div>
  <div>
    <table class="table">
      <thead class="bg-danger text-white">
        <tr>
          <th scope="col">User</th>
          <th scope="col">Blood Quantity</th>
          <th scope="col">Location</th>
          <th colspan="3"></th>
        </tr>
      </thead>
        <tbody>
          <tr>
            <td scope="col"><%= User.donation %></td>
          </tr>
          <% end  %>
        </tbody>
    </table>
  </div>
</div>
